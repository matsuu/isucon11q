# vim:syntax=apparmor

# This file contains common DRI-specific rules useful for GUI applications
# (needed by libdrm and similar).

  /usr/lib{,32,64}/dri/**         mr,
  /usr/lib/@{multiarch}/dri/**    mr,
  /usr/lib/fglrx/dri/**           mr,
  /dev/dri/                       r,
  /dev/dri/**                     rw,
  /etc/drirc                      r,
  /usr/share/drirc.d/{,*.conf}    r,
  owner @{HOME}/.drirc            r,

